<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorBackground"
    android:gravity="center"
    tools:context=".MadaNew">

    <LinearLayout
        android:id="@+id/ll1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:ignore="UselessParent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enter Jap Done in 1 3SRB Cycle"
            android:fontFamily="sans-serif-smallcaps"
            android:textColor="#fff"
            android:gravity="center"
            android:textSize="20dp"/>


            <EditText
                android:id="@+id/edt_numberofmantra"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#fff"
                android:gravity="center"
                android:textSize="20dp"
                android:text="3"
                android:hint="How Many Mantra Jap You Doing In 5 Sec"
                android:textStyle="bold"
                android:inputType="numberDecimal" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:fontFamily="sans-serif-smallcaps"
            android:textSize="20dp"
            android:text="Total Time for 1 Mala  "
            android:textStyle="bold"
            android:layout_marginTop="15dp"
            android:gravity="center"/>

            <TextView
                android:id="@+id/txt_numberofmantra"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorYellow"
                android:textSize="20dp"
                android:text="00:00:00"
                android:textStyle="bold"
                android:gravity="center"
                />
            <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Number Of Mala"
            android:fontFamily="sans-serif-smallcaps"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:textColor="#fff"
            android:textSize="20dp"/>


            <EditText
                android:id="@+id/edt_numberofmala"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#fff"
                android:gravity="center"
                android:textSize="20dp"
                android:text="21"
                android:hint="How Many Mada You Want To Do"
                android:textStyle="bold"
                android:inputType="number" />

        <TextView
             android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="Total Sadhna Time"
            android:fontFamily="sans-serif-smallcaps"
            android:textStyle="bold"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:textColor="#fff"
            />
            <TextView
                android:id="@+id/txt_numberofmala"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:text="00:00:00"
                android:textStyle="bold"
                android:gravity="center"
                android:textColor="@color/colorYellow"
                 />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="Enter Gap Beteen Mala You Want"
            android:fontFamily="sans-serif-smallcaps"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:textColor="#fff"
            />

        <EditText
            android:id="@+id/edt_gapbetmala"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:gravity="center"
            android:textSize="20dp"
            android:text="10"
            android:hint="How Many Mada You Want To Do"
            android:textStyle="bold"
            android:inputType="number" />




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="2"
            android:gravity="center"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:id="@+id/startsadhna"
                android:layout_width="0dp"
                android:layout_weight="1"
                app:cardElevation="12dp"
                app:cardBackgroundColor="@color/colorAccent"
                app:cardCornerRadius="18dp"
                android:layout_margin="20dp"
                android:layout_height="50dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-smallcaps"
                        android:textColor="@color/colorBackground"
                        android:textSize="30dp"
                        android:text="Go"/>

                </LinearLayout>


            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:id="@+id/clearbtn"
                android:layout_width="0dp"
                android:layout_weight="1"
                app:cardElevation="12dp"
                app:cardBackgroundColor="@color/colorAccent"
                app:cardCornerRadius="18dp"
                android:layout_margin="20dp"
                android:layout_height="50dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-smallcaps"
                        android:textColor="@color/colorBackground"
                        android:textSize="30dp"
                        android:text="Clear"/>

                </LinearLayout>


            </androidx.cardview.widget.CardView>

        </LinearLayout>






    </LinearLayout>

</RelativeLayout>